    background-color: #007bff;
    color: #fff;
    padding: 0.5rem 1rem 0.5rem 1rem;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s;
  }
  .btn-secondary:hover {
    background-color: #0056b3;
  }

  h1,
  h2 {
    margin: 0;
    text-align: center;
  }

  .groups-section {
    min-height: 100vh;
  }

  .header-tournament {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 1rem;
  }
  .header-tournament h1 {
    flex-grow: 1;
    text-align: center;
    padding-right: 5rem;
  }
  .tournament-details {
    text-align: center;
    display: flex;
    flex-direction: column;
    padding: 0 1rem;
    gap: 1rem;
    align-items: start;
    .status {
      display: flex;
      align-items: center;
      font-weight: bold;
      gap: 1rem;
      .active {
        color: #fff;
        background-color: #28a745;
        padding: 0.25rem 0.75rem;
        border-radius: 5px;
      }
      .inactive {
        background-color: #dc3545;
        color: #fff;
        padding: 0.25rem 0.75rem;
        border-radius: 5px;
      }
    }
    .date {
      display: flex;
      gap: 1rem;
      align-items: center;
      h2 {
        margin: 0;
