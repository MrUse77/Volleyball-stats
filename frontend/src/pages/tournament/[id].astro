---
import { API_TOURNAMENTS_GET } from "astro:env/server";
import BodyOptions from "../../components/tournament/BodyOptions";

import Layout from "../../layouts/Layout.astro";
interface Tournament {
  id: string;
  name: string;
  description: string;
  type: string;
  status: string;
  startDate: Date;
  endDate: Date;
}

const { id } = Astro.params;
const fetchTournament = async (
  idT: string | undefined
): Promise<Tournament | null> => {
  try {
    console.log({ idT1: idT });
    const response: Response = await fetch(`${API_TOURNAMENTS_GET}/${idT}`);
    const t = await response.json();
    return t;
  } catch (error: any) {
    console.error(error);
    return null;
  }
};
const fetchMatches = async (): Promise<any> => {
	try {
		const response: Response = await fetch(`${API_TOURNAMENTS_GET}/${id}/matches`);
		const matches = await response.json();
		console.dir(matches, { depth: null });

		return matches;
	} catch (error: any) {
		console.error(error);
		return null;
	}
};
export const prerender = false;
const matches = await fetchMatches();
const tournament: Tournament | null = await fetchTournament(id);

---

<Layout title={tournament? tournament.name:'Torneo no encontrado'}>
	<div class="container">
{

  tournament ? (
      <section class="header-tournament">
        <a href="/" class="btn-secondary">
          Volver
        </a>
        <h1>{tournament.name}</h1>
      </section>
      <section class="tournament-details">
        <div class="date">
          <h2>Fecha:</h2>
          <p>
            {new Date(tournament.startDate).toLocaleDateString("es-ES", {
							day: "numeric",
              month: "long",
              year: "numeric",
            })}
          </p>
        </div>
        <div class="status">
          <h2>Estado del torneo:</h2>
          <span class={` ${tournament.status}`}>{tournament.status}</span>
        </div>
        <p>{tournament.description}</p>
      </section>
      <section class="groups-section">
        <BodyOptions client:load tournament={tournament} matches={matches}  />
      </section>
  ) : (

      <section class="groups-section">
        <a href="/" class="btn-secondary">
          Volver
        </a>
        <h1>Torneo no encontrado</h1>
      </section>

  )
}
</div>
	</Layout>

<style is:global>
  .body-grid {
		display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
    padding: 1rem;
  }
  .group-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
