---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
export const prerender = true;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" /><meta
      name="viewport"
      content="width=device-width"
    /><link rel="icon" type="image/svg+xml" href="/favicon.svg" /><meta
      name="generator"
      content={Astro.generator}
    /><title>{title}</title></head
  >

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>

  <style is:global>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
    /* General Styles */
    body {
      font-family: Arial, sans-serif;
      font-weight: bolder;
      font-style: italic;

      margin: 0;
      padding: 0;
      background-color: #f8f9fa;
      color: #343a40;
    }
    main {
      min-height: 100vh;
    }
    .container {
      width: 100%;

      margin: 0 auto;
    }

    h1,
    h2,
    h3 {
      font-family: Impact, Haettenschweiler, "Arial Narrow Bold", sans-serif;
      font-weight: normal;
      font-style: normal;
      margin: 0;
    }

    /* Header */
    header {
      position: fixed;
      background-color: #000000;
      top: 0; /* Pégalo al borde superior */
      left: 0; /* Pégalo al borde izquierdo */
      width: 100%; /* Asegúrate de que ocupe todo el ancho */
      height: 5rem; /* Altura fija */
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5); /* Sombra para un efecto visual */
      color: #fff;
      backdrop-filter: blur(10px);
      z-index: 0;
    }

    header .logo {
      font-size: 1.5rem;
      font-weight: bold;
    }

    header nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      gap: 1rem;
    }

    header nav ul li a {
      color: #fff;
      text-decoration: none;
    }

    header .btn-login:hover {
      background-color: #e0a800;
    }

    /* Hero Section */
    .hero {
      text-align: center;
      background:
        linear-gradient(rgba(0, 123, 255, 0.8), rgba(0, 123, 255, 0.8)),
        url("https://source.unsplash.com/1600x600/?volleyball") no-repeat
          center/cover;
      color: #fff;
      padding: 3rem 0;
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .hero .btn-primary {
      background-color: #ffc107;
      color: #343a40;
      padding: 0.75rem 1.5rem;
      border-radius: 5px;
      text-decoration: none;
      font-weight: bold;
      transition: background-color 0.3s;
    }

    .hero .btn-primary:hover {
      background-color: #e0a800;
    }

    /* Torneos Section */
    .torneos-section {
      padding: 2rem 0;
      min-height: 50vh;
    }

    .torneos-section h2 {
      text-align: center;
    }

    .torneo-card {
      background-color: #fff;
      padding: 1.5rem;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      h3,
      p {
        margin: 0;
      }
    }

    .torneo-card .status {
      display: inline-block;
      margin: 1rem 0;
      padding: 0.25rem 0.75rem;
      border-radius: 5px;
      font-weight: bold;
    }

    .status.en-curso {
      background-color: #28a745;
      color: #fff;
    }

    .status.proximo {
      background-color: #ffc107;
      color: #343a40;
    }

    .btn-secondary {
      background-color: #007bff;
      color: #fff;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      text-decoration: none;
      font-weight: bold;
      transition: background-color 0.3s;
    }

    .btn-secondary:hover {
      background-color: #0056b3;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      text-align: center;
    }

    table th,
    table td {
      padding: 0.75rem;
      border-bottom: 1px solid #ddd;
    }

    table th {
      background-color: #007bff;
      color: #fff;
    }

    table td {
      background-color: #fff;
    }

    table .btn-secondary {
      font-size: 0.875rem;
    }

    /* Footer */
    footer {
      background-color: #343a40;
      color: #fff;
      text-align: center;
      padding: 1rem 0;
    }

    footer a {
      color: #ffc107;
      text-decoration: none;
      margin: 0 0.5rem;
    }

    footer a:hover {
      text-decoration: underline;
    }
    .torneos {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1rem;
      padding: 2rem;
    }
    .loading {
      display: block;
      margin: auto;
      text-align: center;
      grid-column: 1 / -1; /* Para centrar en la cuadrícula */
    }
  </style>
</html>
